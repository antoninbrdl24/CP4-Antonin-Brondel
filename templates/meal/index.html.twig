{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Notre galerie de plats {% endblock %}

{% block body %}
<h1 class="p-3 d-flex justify-content-center">Notre galerie de plats</h1>

    <div class="mb-4 container border-general">
        <div class="row">
            {% for meal in meals %}
            <div class="col-4">
                <div class="m-3 card">
                    {% if meal.id <= 6 %}
                            <img class="img-fluid" src="/uploads/meal/{{ meal.picture }}" alt="{{ meal.name }}">
                    {% else %}
                            <img class="img-fluid" src="/uploads/images/meal/{{ meal.picture }}" alt="{{ meal.name }}">
                    {% endif %}
                    <h2 class="pt-2 text-center"> {{meal.name}}</h2>
                    
                    <p class="mx-auto mt-1">
                        <a class="menu-link" href="{{ path('meal_show', {id:meal.id})}}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-short" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
                            </svg> Voir la fiche technique
                        </a>
                    
                </div>
            </div>
            {% endfor %}
        </div>
    </div> 
    <div class= 'd-flex justify-content-center'>
    {{ knp_pagination_render(meals) }}
    </div>

{% endblock %}