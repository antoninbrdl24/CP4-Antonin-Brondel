{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Menus{% endblock %}
{% block body %}
    <div class="mt-4 mb-4 d-flex container border-general">
        <div class="col text-center">
            <ul>
                {% for menu in menus %}
                    <li>
                        <h2 class="pt-2 "> {{menu.title}}</h2>
                        <p>{{menu.description}}</p>
                        <p class="mx-auto mt-1">
                            <a class="menu-link" href="{{ path('menu_show', {id:menu.id})}}"> 
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-short" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8"/>
                            </svg> Voir le contenu de ce menu
                            </a>
                        </p>
                        
                    </li>
                {% endfor %}
            </ul>
            <div class="row justify-content-center">
                <div class="col-2 m-3  btn btn-primary"
                <button type="button"  onclick="window.location='{{ path('starter_index') }}'">Toutes nos entr√©es</button>
                </div>
                <div class="col-2 m-3  btn btn-primary"
                <button type="button"  onclick="window.location='{{ path('meal_index') }}'">Tous nos plats</button>
                </div>
                <div class="col-2 m-3  btn btn-primary"
                <button type="button"  onclick="window.location='{{ path('dessert_index') }}'">Tous nos desserts</button>
                </div>
            </div>
            <div class="row mx-auto mb-4">
                <div class="col-4">
                    <div id="carouselExampleCaptions1" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="2500">
                        <img class="img-fluid" src="/uploads/starter/{{ starters[0].picture }}" alt="{{starters[0].name }}">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{starters[0].name}}</h5>
                        </div>
                        </div>
                        <div class="carousel-item " data-bs-interval="2500">
                        <img class="img-fluid" src="/uploads/meal/{{ meals[0].picture }}" alt="{{meals[0].name }}">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{meals[0].name}}</h5>
                        </div>
                        </div>
                        <div class="carousel-item " data-bs-interval="2500">
                        <img class="img-fluid" src="/uploads/dessert/{{ desserts[0].picture }}" alt="{{desserts[0].name }}">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{desserts[0].name}}</h5>
                        </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    </div>
                </div>
                <div class="col-4">
                    <div id="carouselExampleCaptions3" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
