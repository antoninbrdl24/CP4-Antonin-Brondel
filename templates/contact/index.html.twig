{% extends 'base.html.twig' %}

{% block title %}Contact - Le gueuleton gastronomique {% endblock %}

{% block body %}
<h1 class="mx-auto pt-4">Contact du gueuleton astronomique</h1>
     <p class="mx-auto text-center pt-4"> Veuillez remplir ce formulaire pour nous faire part de votre expérience lors de votre passage chez nous.</p>
    <div class="container mb-4 mx-auto border-general">
    {{ form_start(form) }}
      
        {{ form_row(form.name, {'label': 'Prénom'|trans}) }}
        {{ form_row(form.lastname, {'label': 'Nom'|trans}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.demand, {'label': 'Contexte de votre demande'|trans}) }}
        {{ form_row(form.content, {'label': 'Votre demande'|trans}) }}

        <button type="submit" class="btn btn-primary bouton-general"> Soumettre ce formulaire</button>
    {{ form_end(form) }}

     </div>
{% endblock %}
